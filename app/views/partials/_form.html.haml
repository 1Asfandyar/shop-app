.custom-form-container
  = form_with(model: product_inquiry, url: product_inquiries_path, remote: true, html: { class: "form-horizontal" }) do |form|
    - if product_inquiry.errors.any?
      #error_explanation.alert.alert-danger
        %ul
          - product_inquiry.errors.full_messages.each do |message|
            %li= message
    .form-group
      = form.label "Product Id"
      .col-sm-12
        = form.text_field :product_id, class: "form-control ", min: 0, readonly: true, value: product.id
    .form-group
      = form.label "Email"
      .col-sm-12
        = form.email_field :email, placeholder: "...this email will be used to contact you back", class: "form-control"
    .form-group
      = form.label "Comments"
      .col-sm-12
        = form.text_field :comments, class: "form-control no-resize", rows: 5
    .form-group
      .col-sm-offset-2.col-sm-12.mt-3
        = form.submit "Submit Order", class: "btn btn-primary-custom"