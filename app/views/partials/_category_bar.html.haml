%style
  :plain
    .navbar1.mb-3 {
      overflow-x: auto;
    }

%nav.navbar1.mb-3
  .d-flex.flex-wrap
    %ul.list-unstyled.d-flex.m-0.p-0
      - @categories.each do |category|
        %li.mr-2
          = link_to category.name, category_path(category), class: "badge custom-badge-style rounded-pill", data: { toggle: "badge-click" }
